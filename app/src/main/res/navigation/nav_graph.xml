<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.notesapp.ui.notes.NotesFragment"
        android:label="Заметки">
        <action
            android:id="@+id/action_notesFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.example.notesapp.ui.notes.AddEditNoteFragment"
        android:label="Новая заметка">

        <argument
            android:name="note"
            app:argType="com.example.notesapp.data.model.Note"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>
